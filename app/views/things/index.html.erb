<div class="page-header">
  <h1>
    Things
    <a href="/things/new" class="btn btn-lg btn-success">New Thing</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @things.each do |thing| %>
      <tr>
        <td><%= thing.name %></td>
        <td><%= thing.user.email %></td>
        <td>
          <a href="/things/<%= thing.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == thing.user %>
            <a href="/things/<%= thing.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_thing/<%= thing.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
